.button1{
  margin-top: 50rpx;
  width:60%;
}
.devices_summary{
  margin-top: 20rpx;
  padding:30rpx;
  font-size: 30rpx;

}
.device_list{
  height: 600rpx;
  margin:50rpx 5rpx;
  margin-top: 0;
  border:1px solid #B2CDE7;
  border-radius: 5px;
  width:auto;

}
.device_item{
  border-bottom: 2rpx solid rgb(0, 0, 0);
  padding: 10px;  
  color: #666;

}
.device_item_hover{

  background-color: #81D8CF;
}
.connected_info {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #F0F0F0;
  padding: 10px;
  padding-bottom: 20px;
  margin-bottom: env(safe-area-inset-bottom);
  font-size: 14px;
  min-height: 100px;
  box-shadow: 0px 0px 3px 0px;
}
.connected_info .operation {
  position: absolute;
  display: inline-block;
  right: 30px;
}
