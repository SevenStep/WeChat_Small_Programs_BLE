/* pages/page_1/page_1.wxss */

.container{
  display: flex;
  flex-direction:column;
  font-family: Arial, sans-serif;
}

.page-body{
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content: center; 
}

.devices-status{
  position: fixed;
  top: 2.5%;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: center; 
  color: antiquewhite;
}

.tem-container{
  position: fixed;
  top: 8%;
  left: 12.5%;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: center; 
}
.icontemperature{
  background-image: url(data:image/svg+xml;base64,);
  background-size: cover;
}
.icon-temperature{
  height: 48rpx;
  width: 48rpx;
}

.hum-container{
  position: fixed;
  top: 15%;
  left: 12.5%;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: center; 
}
.iconhumidity{
  background-image: url(data:image/svg+xml;base64,);
  background-size: cover;
}
.icon-humidity{
  height: 48rpx;
  width: 48rpx;
}

.text-num{
  font-size: 44rpx;
  color: black;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: center; 
  
}

.close{
  position: fixed;
  top: 10%;
  right: 12.5%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-close{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-close::after{
  border-radius: 50rpx;
  border: 0;
}
.btn-close-hover{
  background-color:red;
}

.devices-finder{
  position: fixed;
  top: 23.5%;
  left: 10%;
  font-size: 26rpx;
}

.devices-list{
  position: fixed;
  top: 28.5%;
  left:5%;
  width: 90%;
  height: 50%;
  background-color: ghostwhite;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.devices-item{
  width: 100%;
  height: 20%;
  background-color: ghostwhite;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx dashed gray;
}
.devices-item-hover{
  background-color: #81D8CF;
}

.text-devices{
  position: absolute;
  left: 3%;
  font-size: 48rpx;
  color: black;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}



.start{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.btn-start{
  height: 100rpx;
  width: 75%;
  position: fixed;
  bottom: 10%;
  right: 12.5%;
  background-color: rgb(245, 168, 75);
  border-radius: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.btn-start::after{
  border-radius: 100rpx;
  border: 0;
}
/*用border::after来删除button的默认边宽*/
.btn-start-hover{
  background-color: burlywood;
}
.icon-bluetooth{
  background-image: url(data:image/svg+xml;base64,);
  height: 40rpx;
  width: 40rpx;
  background-size: cover;
  display: flex;
  align-items: center;
  justify-content: center; 
}
.text-start{
  font-size: 36rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center; 
}

.version{
  position: fixed;
  bottom: 5%;
  height: 26rpx;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.btn-version{
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
}
.btn-version::after {
  border: 0;
}
.text-version{
  font-size: 24rpx;
  color: gray;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
  font-family: "YaHei";
}


.developer{
  position: fixed;
  bottom: 2%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
}
.text-developer{
  font-size: 20rpx;
  color: gray;
  align-items: center;
  font-family: "YaHei";
}


